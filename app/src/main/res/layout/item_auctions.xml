<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">
    <TextView
        android:id="@+id/rate_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESSEK"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_marginLeft="180dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nbEnchere"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/PrixEnchere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"

            android:textSize="12dp"
            android:fontFamily=" Verdana, Open Sans, Arial, Helvetica Neue, Helvetica, sans-serif;"
            />
        <ImageView
            android:id="@+id/ImageGold"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/money_gold" />

        <TextView
            android:id="@+id/PrixAchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"

            android:textSize="12dp"
            android:fontFamily=" Verdana, Open Sans, Arial, Helvetica Neue, Helvetica, sans-serif;"
            />
        <ImageView
            android:id="@+id/ImageGoldAchat"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/money_gold" />



    </LinearLayout>
</RelativeLayout>